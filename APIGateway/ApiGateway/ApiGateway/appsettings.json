{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Debug"
    }
  },
  "AllowedHosts": "*",
  "JwtSettings": {
    "Secret": "your-super-secret-key-at-least-32-characters-long",
    "Issuer": "identity-service",
    "Audience": "api-gateway",
    "ExpirationMinutes": 60
  },
  "ReverseProxy": {
    "Routes": {
      "identity-auth": {
        "ClusterId": "identity",
        "Match": {
          "Path": "/api/auth/{**remainder}"
        }
      },
      "identity-user": {
        "ClusterId": "identity",
        "Match": {
          "Path": "/api/user/{**remainder}"
        }
      }
    },
    "Clusters": {
      "identity": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:5001"
          }
        }
      }
    }
  }
}