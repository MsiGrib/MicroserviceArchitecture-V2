@using ClientSite.WASM.Shared.Components.Buttons.Ui
@using ClientSite.WASM.Shared.Components.Texts.Lib

<nav class="sticky top-0 z-50 w-full border-b border-gray-200 bg-white shadow-sm dark:border-blue-300 dark:bg-blue-300">
    <div class="container mx-auto px-4">
        <div class="flex h-16 items-center justify-between">

            <div class="flex cursor-pointer items-center space-x-2">

                <Button SimpleTextType="@SimpleTextType.Button2"
                        OnClick="@NavigateToHome"
                        class="rounded-xl bg-blue-600 px-6 py-2.5 text-white shadow-sm transition-colors duration-150 hover:bg-blue-700">
                    Home
                </Button>

            </div>

            <div class="flex items-center space-x-4">

                @if (!_isAuthenticated)
                {
                    <Button SimpleTextType="@SimpleTextType.Button2"
                            OnClick="@NavigateToLogin"
                            class="rounded-xl bg-blue-600 px-6 py-2.5 text-white shadow-sm transition-colors duration-150 hover:bg-blue-700">
                        Sign In
                    </Button>

                    <Button SimpleTextType="@SimpleTextType.Button2"
                            OnClick="@NavigateToRegister"
                            class="rounded-xl bg-blue-600 px-6 py-2.5 text-white shadow-sm transition-colors duration-150 hover:bg-blue-700">
                        Sign Up
                    </Button>
                }
                else
                {
                    <Button SimpleTextType="@SimpleTextType.Button2"
                            OnClick="@LogOut"
                            class="rounded-xl bg-blue-600 px-6 py-2.5 text-white shadow-sm transition-colors duration-150 hover:bg-blue-700">
                        Log Out
                    </Button>
                }

            </div>

        </div>
    </div>
</nav>