@using ClientSite.WASM.Shared.Components.Loaders.Lib

@inherits BaseComponent

@if (Type == LoaderType.Spinner)
{
    <div class="@GetContainerClasses() @AdditionalClass" @attributes="CleanedAttributes">
        <div class="@GetLoaderClasses()"></div>
        @if (ShowText && !string.IsNullOrEmpty(Text))
        {
            <div class="@GetTextClass(TextType) mt-4 text-center">@Text</div>
        }
    </div>
}
else if (Type == LoaderType.Dots)
{
    <div class="@GetContainerClasses() @AdditionalClass" @attributes="CleanedAttributes">
        <div class="@GetLoaderClasses()">
            <div class="w-3 h-3 bg-current rounded-full animate-bounce"></div>
            <div class="w-3 h-3 bg-current rounded-full animate-bounce" style="animation-delay: 0.2s"></div>
            <div class="w-3 h-3 bg-current rounded-full animate-bounce" style="animation-delay: 0.4s"></div>
        </div>
        @if (ShowText && !string.IsNullOrEmpty(Text))
        {
            <div class="@GetTextClass(TextType) mt-4 text-center">@Text</div>
        }
    </div>
}
else if (Type == LoaderType.Pulse)
{
    <div class="@GetContainerClasses() @AdditionalClass" @attributes="CleanedAttributes">
        <div class="@GetLoaderClasses() bg-current opacity-75"></div>
        @if (ShowText && !string.IsNullOrEmpty(Text))
        {
            <div class="@GetTextClass(TextType) mt-4 text-center">@Text</div>
        }
    </div>
}
else if (Type == LoaderType.Bar)
{
    <div class="@GetContainerClasses() @AdditionalClass" @attributes="CleanedAttributes">
        <div class="@GetLoaderClasses() bg-gray-200 dark:bg-gray-700">
            <div class="h-full bg-current animate-[progress_2s_ease-in-out_infinite] rounded-full"></div>
        </div>
        @if (ShowText && !string.IsNullOrEmpty(Text))
        {
            <div class="@GetTextClass(TextType) mt-4 text-center">@Text</div>
        }
    </div>
}
else if (Type == LoaderType.Circle)
{
    <div class="@GetContainerClasses() @AdditionalClass" @attributes="CleanedAttributes">
        <div class="@GetLoaderClasses() border-current border-t-transparent"></div>
        @if (ShowText && !string.IsNullOrEmpty(Text))
        {
            <div class="@GetTextClass(TextType) mt-4 text-center">@Text</div>
        }
    </div>
}
else if (Type == LoaderType.DualRing)
{
    <div class="@GetContainerClasses() @AdditionalClass" @attributes="CleanedAttributes">
        <div class="@GetLoaderClasses() border-current border-t-transparent border-b-transparent"></div>
        @if (ShowText && !string.IsNullOrEmpty(Text))
        {
            <div class="@GetTextClass(TextType) mt-4 text-center">@Text</div>
        }
    </div>
}
else if (Type == LoaderType.Heart)
{
    <div class="@GetContainerClasses() @AdditionalClass" @attributes="CleanedAttributes">
        <div class="@GetLoaderClasses()">
            <svg class="@GetSizeClass() @Color" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z" />
            </svg>
        </div>
        @if (ShowText && !string.IsNullOrEmpty(Text))
        {
            <div class="@GetTextClass(TextType) mt-4 text-center">@Text</div>
        }
    </div>
}